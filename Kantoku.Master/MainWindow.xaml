<Window x:Class="Kantoku.Master.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kantoku.Master"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Foreground="#1561C2"
        Title="Kantoku" Height="234" Width="324">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="30">
            Kantoku master
        </TextBlock>

        <StackPanel Grid.Row="1">
            <Label HorizontalAlignment="Center">Services:</Label>

            <ListBox></ListBox>
        </StackPanel>
        
    </Grid>
</Window>
