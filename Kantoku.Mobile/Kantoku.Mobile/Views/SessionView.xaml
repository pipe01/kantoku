<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             HorizontalOptions="Fill"
             x:Class="Kantoku.Mobile.Views.SessionView">

    <StackLayout>
        <Label Text="Anonymous - Unknown" HorizontalOptions="Center" FontSize="Large" />

        <Slider MinimumTrackColor="Red" MaximumTrackColor="Red"></Slider>

        <Grid Margin="5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xf04a;" FontFamily="{StaticResource FontAwesomeSolid}"/>
                </Button.ImageSource>
            </Button>
            <Button Grid.Column="1">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xf04c;" FontFamily="{StaticResource FontAwesomeSolid}"/>
                </Button.ImageSource>
            </Button>
            <Button Grid.Column="2">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xf04e;" FontFamily="{StaticResource FontAwesomeSolid}"/>
                </Button.ImageSource>
            </Button>
        </Grid>
    </StackLayout>
</ContentView>