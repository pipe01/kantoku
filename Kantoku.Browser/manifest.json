{

  "description": "Kantoku remote control",
  "manifest_version": 2,
  "name": "Kantoku",
  "version": "1.0",
  "icons": {
    "48": "icons/48x48.png",
    "96": "icons/96x96.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "kantoku@pipe01.net",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["dist/background.js"]
  },

  "browser_action": {
    "default_icon": "icons/action.png"
  },

  "permissions": ["nativeMessaging"]

}